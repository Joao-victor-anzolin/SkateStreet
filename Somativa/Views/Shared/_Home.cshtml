<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Somativa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Somativa.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #1D1D1D" class="text-white mb-0">
    <header class="row w-100 m-0 ">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm align-items-center sticky-top" style="background-color: #222222">
            <div class="container-fluid">

                <a class="navbar-brand justify-content-sm-center " asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" style="width: 30%" class=" mt-3 mb-2 " /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-open" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span><svg bootstrap-icon="PersonCircle" height="32" width="32" class="text-white"></svg></span>
                </button>
                <div class="navbar-collapse navbar-open collapse d-sm-inline-flex justify-content-end text-sm-center">
                    <partial name="_LoginPartial"/>
                </div>

            </div>
        </nav>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #191919;">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-cob" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span><svg bootstrap-icon="List" height="32" width="32" class="text-white"></svg></span>
                </button>
                <div class="navbar-collapse navbar-cob collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1 justify-content-evenly" >
                        <li class="nav-item">
                            <a class="nav-link text-white hover-text" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover-text" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover-text" asp-area="" asp-controller="Fornecedores" asp-action="Index">Fornecedores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover-text" asp-area="" asp-controller="Categorias" asp-action="Index">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover-text" asp-area="" asp-controller="Produtos" asp-action="Index">Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover-text" asp-area="" asp-controller="Vendas" asp-action="Index">Vendas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover-text" asp-area="" asp-controller="Compras" asp-action="Index">Compras</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Relatórios
                            </a>
                            <ul class="dropdown-menu" style="background-color: #191919">
                                <li class="nav-item dropdown-item">
                                    <a class="nav-link text-white hover-text dropdown-item" asp-area="" asp-controller="Relatorio" asp-action="RelatProd">Produtos</a>
                                </li>
                                <li class="nav-item dropdown-item">
                                    <a class="nav-link text-white hover-text dropdown-item" asp-area="" asp-controller="Relatorio" asp-action="RelatMov">Movimentações</a>
                                </li>
                            </ul>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="carousel slide" id="slider" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/Skate1.png" />
            </div>

            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/Bike.png" class="carousel-caption d-none d-md-block text-bg-dark">
            </div>

            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/Skate2.png" class="carousel-caption d-none d-md-block text-bg-dark">
            </div>

            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/Surf2.png" class="carousel-caption d-none d-md-block text-bg-dark">
            </div>

       </div>

    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    

    <footer class=" mb-0 mt-3 text-center p-2 " style="background-color: #191919;">
        <img src="~/img/logo.png" class="mt-2" style="width: 100px"/>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
