@model Somativa.Models.Cliente

@{
    ViewData["Title"] = "Criar";
}

<h1 class="my-3">Criar</h1>

<h4 class="my-3"><span style="color: #FF9900">Clientes</span></h4>

<hr />
<div class="row">
    <div class="">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control bg-dark text-white border-0 my-2" placeholder="Nome:" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control bg-dark text-white border-0 my-2" placeholder="Endereço:" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input class="form-control bg-dark text-white border-0 my-2" placeholder="Telefone:" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="form-group col-6">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control bg-dark text-white border-0 my-2" placeholder="Cpf:" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control bg-dark text-white border-0 my-2" placeholder="E-mail:" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Nascimento" class="control-label"></label>
                    <input asp-for="Nascimento" type="date" class="form-control bg-dark text-white border-0 my-2" placeholder="Nascimento:" />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group mt-2 text-center">
                <input type="submit" value="Create" class="btn btn-warning" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
