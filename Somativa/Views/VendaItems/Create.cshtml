@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Criar";
    var VendaIdAux = ViewData["VendaId"];
}

<h1 class="my-3">Criar</h1>

<h4 class="my-3"><span style="color: #FF9900">Itens Venda</span></h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create" asp-route-id="@VendaIdAux">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="VendaId" class="control-label"></label>
                <input asp-for="VendaId" value="@VendaIdAux" class="form-control bg-dark text-white border-0 my-2" readonly />
            </div>

            <div class="form-group my-2">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control bg-dark text-white border-0 my-2" asp-items="ViewBag.ProdutoId"></select>
            </div>
            <div class="row">
                <div class="form-group col-6 my-2">
                    <label asp-for="Quantidade" class="control-label"></label>
                    <input asp-for="Quantidade" class="form-control bg-dark text-white border-0 my-2" placeholder="Quantidade:" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>

                <div class="form-group col-6 my-2">
                    <label asp-for="Unitario" class="control-label"></label>
                    <input asp-for="Unitario" class="form-control bg-dark text-white border-0 my-2" placeholder="Unitário:" />
                    <span asp-validation-for="Unitario" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group text-center mt-3 ">
                <input type="submit" value="Create" class="btn btn-warning" />
                <a class="btn btn-secondary" asp-action="Index" asp-route-id="@VendaIdAux">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
