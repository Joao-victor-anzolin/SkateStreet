@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Edit";
}

<h1 class="my-3">Editar</h1>

<h4 class="my-3"><span style="color: #FF9900">Itens Venda</span></h4>

<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendaItemId" />
            <div class="form-group my-2">
                <label asp-for="VendaId" class="control-label"></label>
                <select asp-for="VendaId" class="form-control bg-dark text-white border-0" asp-items="ViewBag.VendaId"></select>
                <span asp-validation-for="VendaId" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control bg-dark text-white border-0" asp-items="ViewBag.ProdutoId"></select>
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control bg-dark text-white border-0" placeholder="Quantidade:" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Unitario" class="control-label"></label>
                <input asp-for="Unitario" class="form-control bg-dark text-white border-0" placeholder="Unitário:" />
                <span asp-validation-for="Unitario" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-3">
                <input type="submit" value="Salvar" class="btn btn-warning" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
