@model Somativa.Models.Compra

@{
    ViewData["Title"] = "Criar";
}

<h1 class="my-3">Criar</h1>

<h4 class="my-3"><span style="color: #FF9900">Compra</span></h4>
<hr />
<div class="row">
    <div class="">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="form-group col-12 my-2">
                    <label asp-for="Nota" class="control-label"></label>
                    <input asp-for="Nota" class="form-control bg-dark text-white border-0 my-2" placeholder="Nota:" />
                    <span asp-validation-for="Nota" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-12 my-2">
                    <label asp-for="DataHora" class="control-label"></label>
                    <input asp-for="DataHora" class="form-control bg-dark text-white border-0 my-2"  />
                    <span asp-validation-for="DataHora" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group text-center mt-2">
                <input type="submit" value="Criar" class="btn btn-warning" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
