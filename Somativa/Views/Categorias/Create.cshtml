@model Somativa.Models.Categoria

@{
    ViewData["Title"] = "Criar";
}

<h1 class="my-3">Criar</h1>

<h4 class="my-3"><span style="color: #FF9900">Categoria</span></h4>

<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control bg-dark text-white border-0" placeholder="Nome:"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input class="btn btn-warning text-darks" type="submit" value="Criar" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
