@model Somativa.Models.Produto

@{
    ViewData["Title"] = "Create";
}
<h1 class="my-3">Criar</h1>

<h4 class="my-3"><span style="color: #FF9900">Fornecedores</span></h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control bg-dark text-white border-0 my-2" placeholder="Nome:" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="row">

                <div class="form-group col-6 my-2">
                <label asp-for="Estoque" class="control-label"></label>
                <input asp-for="Estoque" class="form-control bg-dark text-white border-0 my-2" placeholder="Estoque:" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
                <div class="form-group col-6 my-2">
                <label asp-for="Preco" class="control-label">Preço</label>
                <input asp-for="Preco" type="number" step="1" class="form-control bg-dark text-white border-0 my-2" placeholder="Preço:" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            </div>
            <div class="form-group my-2">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control bg-dark text-white border-0 my-2" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <div class="form-group my-2">
                <label asp-for="FornecedorId" class="control-label"></label>
                <select asp-for="FornecedorId" class="form-control bg-dark text-white border-0 my-2" asp-items="ViewBag.FornecedorId"></select>
            </div>
            <div class="form-group text-center mt-3">
                <input type="submit" value="Create" class="btn btn-warning" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
