@model Somativa.Models.Produto

@{
    ViewData["Title"] = "Editar";
}

<h1 class="my-3">Editar</h1>

<h4 class="my-3"><span style="color: #FF9900">Produtos</span></h4>

<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoId" />
            <div class="form-group my-2">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control bg-dark text-white border-0" placeholder="Nome:" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Estoque" class="control-label"></label>
                <input asp-for="Estoque" class="form-control bg-dark text-white border-0" placeholder="Estoque:" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control bg-dark text-white border-0" placeholder="Preço:" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group my-2 col-6">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-control bg-dark text-white border-0" asp-items="ViewBag.CategoriaId"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group my-2 col-6">
                    <label asp-for="FornecedorId" class="control-label"></label>
                    <select asp-for="FornecedorId" class="form-control bg-dark text-white border-0" asp-items="ViewBag.FornecedorId"></select>
                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group text-center mt-3">
                <input type="submit" value="Salvar" class="btn btn-warning" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
