@model Somativa.Models.Venda

@{
    ViewData["Title"] = "Create";
}

<h1 class="my-3">Criar</h1>

<h4 class="my-3"><span style="color: #FF9900">Vendas</span></h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group my-2">
                <label asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control bg-dark text-white border-0 my-2" placeholder="Nota:" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control bg-dark text-white border-0 my-2" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group my-2">
                <label asp-for="DataHora" class="control-label"></label>
                <input asp-for="DataHora" class="form-control bg-dark text-white border-0 my-2" placeholder="Data:" />
                <span asp-validation-for="DataHora" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 text-center">
                <input type="submit" value="Create" class="btn btn-warning" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
