@model Somativa.Models.CompraItem

@{
    ViewData["Title"] = "Create";
    var CompraIdAux = ViewData["CompraId"];
}

<h1 class="my-3">Criar</h1>

<h4 class="my-3"><span style="color: #FF9900">Itens Compra</span></h4>
<hr />
<div class="row">
    <div class="">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="form-group my-2 col-12">
                    <label asp-for="CompraId" class="control-label"></label>
                    <input asp-for="CompraId" value="@CompraIdAux" class="form-control bg-dark text-white border-0 my-2" readonly />
                </div>
            </div>

            <div class="row">
                <div class="form-group my-2 col-6">
                    <label asp-for="ProdutoId" class="control-label"></label>
                    <select asp-for="ProdutoId" class="form-control bg-dark text-white border-0 my-2" asp-items="ViewBag.ProdutoId"></select>
                </div>



            
                <div class="form-group my-2 col-6">
                    <label asp-for="Quantidade" class="control-label"></label>
                    <input asp-for="Quantidade" class="form-control bg-dark text-white border-0 my-2" placeholder="Quantidade:" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group my-2 col-12">
                    <label asp-for="Unitario" class="control-label"></label>
                    <input asp-for="Unitario" class="form-control bg-dark text-white border-0 my-2" placeholder="Unitário:" />
                    <span asp-validation-for="Unitario" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-2 text-center">
                <input type="submit" value="Criar" class="btn btn-warning" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
