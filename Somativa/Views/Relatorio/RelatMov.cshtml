@model IEnumerable<Somativa.Models.Movimentacao>

@{
    ViewData["Title"] = "Relatório Movimentação";
    var prod = ViewData["Produtos"] as List<Produto>;
    prod.Insert(0, new Produto { ProdutoId = new Guid(), Nome = "Todos" });
}

<h1 class="my-3">Relatório Movimentação</h1>

<form>
    <div class="mt-3 mb-3 row">
        <div class="col-12 col-md-6 col-lg-3 my-2">
            <label class="form-label">Data início:</label>
            <input class="form-control" name="inDataIni" type="date" class="ms-3 me-3" />
        </div>

        <div class="col-12 col-md-6 col-lg-3 my-2">
            <label class="form-label">Data fim:</label>
            <input class="form-control" name="inDataFim" type="date" class="ms-3 me-3" />
        </div>

        <div class="col-12 col-md-6 col-lg-2 my-2">
            <label class="form-label">Movimentação:</label>
            <select class="form-select" name="inTipo" class="ms-3 me-3">
                <option value="0">Todos</option>
                <option value="1">Entradas</option>
                <option value="2">Saídas</option>
            </select>
        </div>

        <div class="col-12 col-md-6 col-lg-2 my-2">
            <label class="form-label">Produto:</label>
            <select class="form-select" name="inProduto" class="ms-3 me-3">
                @foreach (var item in prod)
                {
                    <option value="@item.Nome">@item.Nome</option>
                }
            </select>
        </div>

        <div class="col-sm-3 col-md-3 col-lg-2 my-3">
            <br />
            <button asp-action="SearchMov" class="btn btn-warning text-dark">Filtrar <svg bootstrap-icon="Filter" height="24" width="24"></svg></button>
        </div>

    </div>
</form>

<div class="table-responsive">
    <table class="table text-white table-responsive table-striped">
        <thead>
            <tr style="background-color: #191919; color:#FF9900; border: 1px solid #FF9900; border-radius:50px">
                <th>
                    @Html.DisplayNameFor(model => model.Nota)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataHora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoMovimentacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Produto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unitario)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="background-color: #F8F8F8; border: 1px solid #FF9900; border-radius:50px" class="text-dark">
                    <td>
                        @Html.DisplayFor(modelItem => item.Nota)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataHora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoMovimentacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unitario)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>